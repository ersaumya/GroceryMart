
@inherits GroceryMart.WebApp.Security.CustomBasePage
@using System.Web.Optimization
<!DOCTYPE html>   
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GroceryMart</title>
     @Styles.Render("~/css")
     @Scripts.Render("~/js")
   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GroceryMart", "Index", "App", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    @if (CurrentUser != null)
                    {
                        <li style="padding:15px; color:white">
                            Welcome : @CurrentUser.Name
                        </li>
                        <li>
                            @Html.ActionLink("SignOut", "SignOut", "Account", new { area = "" }, null)
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GroceryMart Pvt. Ltd</p>
        </footer>
    </div>

   

</body>
</html>